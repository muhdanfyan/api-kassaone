# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Copy file ini ke .env dan isi dengan nilai sesuai environment
# cp .env.example .env

APP_NAME="KassaOne API"
APP_ENV=local                    # local | production
APP_KEY=                         # Generate dengan: php artisan key:generate
APP_DEBUG=true                   # true untuk dev, false untuk production
APP_URL=http://localhost:8000    # Development URL
APP_TIMEZONE=Asia/Jakarta

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===========================================
# DATABASE CONFIGURATION - NO HARDCODE!
# ===========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1               # Production: ganti ke IP database server
DB_PORT=3306
DB_DATABASE=kassaone
DB_USERNAME=root                # Production: ganti ke user yang aman
DB_PASSWORD=                    # Production: ISI PASSWORD yang kuat!

# ===========================================
# CORS CONFIGURATION - MULTI ORIGIN SUPPORT
# ===========================================
# Development: comma-separated localhost origins
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173,http://127.0.0.1:5174,http://localhost:3000"

# Production: ganti ke domain production
# CORS_ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=                      # Generate random string min 32 chars
JWT_TTL=60                       # Token lifetime (minutes)
JWT_REFRESH_TTL=20160           # 2 weeks

# ===========================================
# CSRF CONFIGURATION
# ===========================================
CSRF_TOKEN_TTL=120              # 2 hours (minutes)

# ===========================================
# SESSION & COOKIE CONFIGURATION
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null              # Production: .yourdomain.com
SESSION_SECURE_COOKIE=false     # Production: true (HTTPS only)
SESSION_SAME_SITE=lax           # lax | strict | none

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
FILESYSTEM_DISK=local
# Production: use S3 or other cloud storage
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=
# AWS_BUCKET=

MAX_UPLOAD_SIZE=10240           # KB (10MB)

# ===========================================
# MAIL CONFIGURATION (for notifications)
# ===========================================
MAIL_MAILER=log                 # Development: log | Production: smtp
MAIL_HOST=smtp.mailtrap.io      # Development: Mailtrap
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@kassaone.com"
MAIL_FROM_NAME="${APP_NAME}"

# Production Mail (contoh Gmail):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:5173    # URL frontend untuk email links

# ===========================================
# WHATSAPP NOTIFICATION (optional)
# ===========================================
WHATSAPP_API_URL=https://api.fonnte.com/send
WHATSAPP_API_TOKEN=

# ===========================================
# CACHE & QUEUE CONFIGURATION
# ===========================================
BROADCAST_CONNECTION=log
CACHE_STORE=database            # Production: redis
QUEUE_CONNECTION=database       # sync | database | redis

# Production Redis:
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                 # Production: error | warning

# ===========================================
# API RATE LIMITING
# ===========================================
API_RATE_LIMIT=60               # requests per minute
API_RATE_LIMIT_AUTHENTICATED=120

# ===========================================
# AWS CONFIGURATION (if using S3)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# VITE CONFIGURATION
# ===========================================
VITE_APP_NAME="${APP_NAME}"
